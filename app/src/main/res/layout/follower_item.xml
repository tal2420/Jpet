<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"></FrameLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#271fbaff">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:layout_gravity="top">


            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/follower_picture"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="6dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="eliya_daida"
                    android:id="@+id/user_name"
                    android:layout_marginTop="30dp" />

            </LinearLayout>
        </LinearLayout>

        <FrameLayout
            android:layout_width="200dp"
            android:layout_height="fill_parent"
            android:layout_marginRight="50dp">

            <Button
                android:id="@+id/is_follow"

                android:text="Following"
                android:textColor="#787878"
                android:textSize="15sp"

                android:layout_width="100dp"
                android:layout_height="25dp"
                android:background="@drawable/buttonshapeblue"
                android:shadowColor="#FFFFFF"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:layout_marginTop="20dp" />

            <Button
                android:id="@+id/start_follow_btn"

                android:text="Follow"
                android:textColor="#ABABAB"
                android:textSize="15sp"
                android:drawableLeft="@drawable/plus"

                android:layout_width="100dp"
                android:layout_height="25dp"
                android:background="@drawable/buttonshapewhite"
                android:shadowColor="#FFFFFF"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:layout_marginTop="20dp" />


        </FrameLayout>
    </LinearLayout>

</LinearLayout>